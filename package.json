{
  "name": "rs-rest-service-starter",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "type": "commonjs",
  "description": "REST service starter for RS School",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc -p .",
    "clean": "clean-modules --yes",
    "lint": "eslint --ext .js,.ts --fix src/",
    "start:dev": "nodemon -L --exitcrash",
    "start:prod": "nodemon -L --exitcrash dist/server.js",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "keywords": [
    "rs",
    "school",
    "rest",
    "node",
    "express",
    "autotest",
    "starter"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts,json",
    "exec": "ts-node src/server.ts"
  },
  "dependencies": {
    "@types/node": "^17.0.8",
    "@types/uuid": "^8.3.4",
    "clean-modules": "^2.0.4",
    "cross-env": "7.0.3",
    "dotenv": "11.0.0",
    "fastify": "^3.25.3",
    "fastify-swagger": "^4.13.1",
    "nodemon": "2.0.15",
    "pg": "^8.7.1",
    "pino-pretty": "^7.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.4.0",
    "typeorm": "^0.2.41",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "4.3.4",
    "debug": "4.3.3",
    "dirty-chai": "2.0.1",
    "eslint": "8.6.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-base-ts": "^14.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.8",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "prettier": "2.4.1",
    "supertest": "6.1.6"
  }
}
